\newcommand{\tikzarray}[1]{
  \begin{tikzpicture}[baseline=(n.base)]
    \coordinate (s) at (0,0);
    \foreach \num in {#1}{
      \node (n) [minimum size=6mm, draw, rectangle] at (s) {\num};
      \coordinate (s) at ($(s) + (6mm,0)$);
    }
  \end{tikzpicture}
}

